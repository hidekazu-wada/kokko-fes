---
// コンポーネント
import PageLayout from "../layouts/PageLayout.astro";
import PageBottomWave from "../components/common/PageBottomWave.astro";
import Breadcrumb from "../components/common/Breadcrumb.astro";

// 画像
import { getImage } from "astro:assets";
import archiveImage2024 from "../images/archive/img-2024.png";
import archiveImage2025 from "../images/archive/img-2025.png";

// フォーマット
const Img2024 = await getImage({
  src: archiveImage2024,
  format: "webp",
  widths: [500, 600],
});
const Img2025 = await getImage({
  src: archiveImage2025,
  format: "webp",
  widths: [500, 600],
});
---

<PageLayout title="過去のコッコ祭り｜コッコ祭り 2025｜KOKKO Festival">
  <section class="page-wrapper archive">
    <div class="archive__container">
      <header class="archive__header">
        <h1 class="archive__title">
          <span class="archive__title-accent">過</span>
          去のコッコ祭り
        </h1>
        <p class="archive__subtitle">− ARCHIVE −</p>
      </header>
    </div>

    <main class="archive-content">
      <p class="archive-content__lead">これまでの開催記録をご覧いただけます</p>
      <div class="archive-content__grid">
        <div class="archive-content__row">
          <article class="archive-item">
            <figure class="archive-item__image">
              <picture class="archive-item__picture">
                <!-- デスクトップ（1024px以上）→ 最高解像度版 -->
                <source
                  media="(min-width: 1024px)"
                  srcset={Img2024.srcSet.toString()}
                />
                <!-- タブレット（744px以上）→ 中解像度版 -->
                <source
                  media="(min-width: 744px)"
                  srcset={Img2024.srcSet.toString()}
                />
                <!-- スマホ（744px未満）→ 最小解像度版 -->
                <img
                  src={Img2024.src}
                  alt="2023年コッコ祭りの様子"
                  class="archive-item__img"
                />
              </picture>
            </figure>
            <h2 class="archive-item__year">2023</h2>
            <div class="archive-item__theme-label">テーマ</div>
            <p class="archive-item__theme">「ゆったり安らぐ のびのび遊ぶ」</p>
            <time class="archive-item__date">開催日：2023.12.2-3</time>
          </article>
