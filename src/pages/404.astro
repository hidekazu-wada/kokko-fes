        margin: tpx(40) 0 tpx(40);
      }
      @include desktop-up {
        font-size: ppx(33);
        margin: ppx(44) 0 ppx(36);
      }
    }

    &__timer {
      color: var(--base_5, #102a4d);
      text-align: center;
      font-size: spx(26);
      font-weight: 700;
      line-height: 180%;
      @include tablet-up {
        font-size: tpx(33);
      }
      @include desktop-up {
        font-size: ppx(33);
      }
    }

    &__countdown {
