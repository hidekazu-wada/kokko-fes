---
// コンポーネント
import PageLayout from "../layouts/PageLayout.astro";
import PageBottomWave from "../components/common/PageBottomWave.astro";
---

<PageLayout
  title="ページが見つかりません ｜コッコ祭り 2025｜KOKKO Festival"
  description="お探しのページが見つかりませんでした。コッコ祭り2025の最新情報はトップページからご覧いただけます。"
>
  <!-- 404 error content -->
  <section class="page-wrapper error-404">
    <div class="error-404__container">
      <h2 class="error-404__title"><span>NOT</span> FOUND</h2>
      <p class="error-404__message">
        お探しのページが見つかりませんでした。<br />
        トップページへご案内いたします。
      </p>
      <p class="error-404__timer">
        ※このページは<time class="error-404__countdown">10</time
        >秒後に自動的にジャンプします。
      </p>
    </div>
    <PageBottomWave />
  </section>
</PageLayout>

<style lang="scss">
  @import "../styles/variables";
  @import "../styles/functions";
  @import "../styles/mixins";

  .error-404 {
    height: 90svh;
    display: grid;
    place-items: center;
    @include tablet-up {
    }
    @include desktop-up {
    }

    &__container {
      @include tablet-up {
      }
      @include desktop-up {
      }
    }

    &__title {
      color: var(--base_5, #102a4d);
      font-size: spx(70);
      font-weight: 700;
      line-height: 130%;
      text-align: center;
      @include tablet-up {
        font-size: tpx(110);
      }
      @include desktop-up {
        font-size: ppx(110);
      }
      span {
        color: var(--base_5, #c99e2d);
      }
    }

    &__message {
      color: var(--base_5, #102a4d);
      text-align: center;
      font-size: spx(28);
      font-weight: 700;
      line-height: 180%;
      margin: spx(30) 0 spx(18);
      @include tablet-up {
        font-size: tpx(33);
        margin: tpx(40) 0 tpx(40);
      }
      @include desktop-up {
        font-size: ppx(33);
        margin: ppx(44) 0 ppx(36);
      }
    }

    &__timer {
      color: var(--base_5, #102a4d);
      text-align: center;
      font-size: spx(26);
      font-weight: 700;
      line-height: 180%;
      @include tablet-up {
        font-size: tpx(33);
      }
      @include desktop-up {
        font-size: ppx(33);
      }
    }

    &__countdown {
      color: var(--logo_color_3, #c99e2d);
      font-weight: 700;
      @include tablet-up {
      }
      @include desktop-up {
      }
    }
  }
</style>

<script>
  // カウントダウン機能
  document.addEventListener("DOMContentLoaded", function () {
    const countdownElement = document.querySelector(".error-404__countdown");
    let countdown = 10; // 10秒から開始

    // カウントダウンを更新する関数
    function updateCountdown() {
      if (countdownElement) {
        countdownElement.textContent = countdown.toString();
      }

      if (countdown <= 0) {
        // カウントダウンが0になったらトップページにジャンプ
        window.location.href = "/";
        return;
      }

      countdown--;
      // 1秒後に再実行
      setTimeout(updateCountdown, 1000);
    }

    // カウントダウン開始
    updateCountdown();
  });
</script>
