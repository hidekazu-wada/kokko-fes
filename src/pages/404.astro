  /* 必要なmixin/functionをインポート */
  @import "../styles/variables";
  @import "../styles/functions";
  @import "../styles/mixins";

  body {
    &.menu-open {
      overflow: hidden;
    }
  }

  main {
    position: relative;
  }

  .page-header {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
    width: 100%;
    @include tablet-up {
    }
    @include desktop-up {
    }

    &__title {
      @include tablet-up {
      }
      @include desktop-up {
      }
    }

    &__logo-link {
      display: block;
