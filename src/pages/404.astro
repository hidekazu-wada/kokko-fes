    position: relative;
    height: 90svh;
    display: grid;
    place-items: center;
    @include tablet-up {
    }
    @include desktop-up {
    }

    &__container {
      @include tablet-up {
      }
      @include desktop-up {
      }
    }

    &__title {
      color: var(--base_5, #102a4d);
      font-size: spx(70);
      font-weight: 700;
      line-height: 130%;
