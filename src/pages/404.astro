---
// メインSCSSファイルをインポート
import "../styles/main.scss";

// 画像
import logoHorizontal from "../images/menu/logo-horizontal.svg";
import HeaderTree from "../images/common/page-header-tree.svg";
import PageHeadWaveMobile from "../images/common/page-header-wave-mobile.svg";
import PageHeadWaveTablet from "../images/common/page-header-wave-tablet.svg";
import PageHeadWaveDesktop from "../images/common/page-header-wave-desktop.svg";

// コンポーネント
import MenuToggle from "../components/common/MenuToggle.astro";
import Menu from "../components/common/Menu.astro";
import Footer from "../components/common/Footer.astro";
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Zen+Kaku+Gothic+New:wght@400;500;900&display=swap"
      rel="stylesheet"
    />
    <title>ページが見つかりません - コッコ祭り</title>
  </head>
  <body>
    <main>
      <MenuToggle />
      <Menu />
      <div class="page-header">
        <h1 class="page-header__title">
          <a href="/" class="page-header__logo-link">
            <img
              class="page-header__logo-image"
              src={logoHorizontal.src}
              alt="コッコ祭りロゴ"
            />
          </a>
        </h1>
        <picture>
          <source
            media="(min-width: 1024px)"
            srcset={PageHeadWaveDesktop.src}
          />
          <source media="(min-width: 744px)" srcset={PageHeadWaveTablet.src} />
          <img src={PageHeadWaveMobile.src} alt="" class="page-header__wave" />
        </picture>
        <img
          class="page-header__tree page-header__tree--1"
          src={HeaderTree.src}
          alt="装飾用の木のイラスト"
        />
        <img
          class="page-header__tree page-header__tree--2"
          src={HeaderTree.src}
          alt="装飾用の木のイラスト"
        />
      </div>
      <!-- 404 error content -->
      <section class="error-404">
        <div class="error-404__container">
          <h2 class="error-404__title"><span>NOT</span> FOUND</h2>
          <p class="error-404__message">
            お探しのページが見つかりませんでした。<br />
            トップページへご案内いたします。
          </p>
          <p class="error-404__timer">
            ※このページは<time class="error-404__countdown">10</time
            >秒後に自動的にジャンプします。
          </p>
        </div>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 2560 210"
          fill="none"
          class="page-bottom__wave"
          role="img"
          aria-label="装飾的な波模様"
        >
          <path
            d="M0 210H2560V100C2560 100 2244.38 0 1920 0C1595.62 0 1077.92 150 747.292 150C416.663 150 0 50 0 50V210Z"
            fill="#55B877"></path>
        </svg>
      </section>
      <!-- footer -->
      <Footer />
    </main>
  </body>
</html>

