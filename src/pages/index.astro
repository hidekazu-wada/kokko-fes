        gap: ppx(30) * 1.2;
        width: ppx(1350) * 1.2;
        margin-top: ppx(134) * 1.2;
      }
      @include desktop-up {
        gap: ppx(30);
        width: ppx(1350);
        margin-top: ppx(134);
      }
    }
    &__item {
      &:after {
        content: "";
        display: block;
        background: linear-gradient(
            to right,
            var(--base_5, #102a4d),
            var(--base_5, #102a4d) 25%,
            rgba(0, 0, 0, 0) 25%,
            rgba(0, 0, 0, 0) 100%
          )
          0% 0%;
        background-size: 4px 1px;
        width: 100%;
        height: 1px;
        margin-left: auto;
        margin-right: auto;
        margin-top: spx(18);
        @include tablet-up {
          margin-top: ppx(30) * 1.2;
        }
        @include desktop-up {
          margin-top: ppx(30);
        }
      }
    }
    &__link {
      transition: color 0.3s ease;
      @include hover {
        &:hover {
