      width: spx(220);
      height: spx(47);
      border-radius: spx(15);
      background: var(--logo_color_3, #c99e2d);
      display: grid;
      place-items: center;
      transition: background-color 0.3s ease;
      @include tablet-up {
        width: ppx(220) * 1.2;
        height: ppx(50) * 1.2;
        border-radius: ppx(15) * 1.2;
