      }
    }
    &__description {
      color: var(--base_5, #102a4d);
      font-family: "Zen Kaku Gothic Antique";
      font-size: spx(28);
      font-weight: 700;
      line-height: 180%;
      width: spx(560);
      margin-inline: auto;
      @include tablet-up {
        margin-inline: unset;
        font-size: ppx(30) * 1.2;
        width: ppx(695) * 1.2;
      }
      @include desktop-up {
        font-size: ppx(30);
        width: ppx(695);
      }
    }
  }
  .news {
    @include tablet-up {
    }
    @include desktop-up {
    }
    &__head-image {
      width: 100%;
      @include tablet-up {
      }
      @include desktop-up {
      }
    }
    &__head-img {
      display: block;
      width: 100%;
      @include tablet-up {
      }
      @include desktop-up {
      }
    }
    &__container {
      background: var(--base_2, #fcf2c9);
      padding-top: spx(40);
      padding-bottom: spx(60);
      @include tablet-up {
        padding-top: ppx(77) * 1.2;
        padding-bottom: ppx(191) * 1.2;
      }
      @include desktop-up {
        padding-top: ppx(77);
        padding-bottom: ppx(191);
      }
    }
    &__title {
      width: spx(370);
      height: spx(74);
      display: grid;
      place-items: center;
      background-color: white;
      border-radius: spx(50);
      margin-inline: auto;
      @include tablet-up {
        width: ppx(460) * 1.2;
        height: ppx(92) * 1.2;
        border-radius: ppx(50) * 1.2;
      }
      @include desktop-up {
        width: ppx(460);
        height: ppx(92);
        border-radius: ppx(50);
      }
      span {
        color: var(--base_5, #102a4d);
        font-size: spx(30);
        font-weight: 700;
        line-height: 180%;
        @include tablet-up {
          font-size: ppx(40) * 1.2;
        }
        @include desktop-up {
          font-size: ppx(40);
