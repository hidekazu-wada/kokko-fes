---
// コンポーネント
import PageLayout from "../layouts/PageLayout.astro";
import PageBottomWave from "../components/common/PageBottomWave.astro";
import Breadcrumb from "../components/common/Breadcrumb.astro";
import PageTitle from "../components/common/PageTitle.astro";

// 画像
import { getImage } from "astro:assets";
import logoJaranImg from "../images/stay/jaran.png";
import logoRakutenImg from "../images/stay/rakuten.png";

const Jaran = await getImage({
  src: logoJaranImg,
  format: "webp",
  widths: [342],
});
const Rakuten = await getImage({
  src: logoRakutenImg,
  format: "webp",
  widths: [342],
});
---

<PageLayout
  title="泊まる｜コッコ祭り 2025｜KOKKO Festival"
  description="コッコ祭り周辺の宿泊情報。河口湖・西湖エリアのホテル・旅館をじゃらん・楽天トラベルでお得に予約。イベントと宿泊をセットで楽しもう。"
>
  <section class="page-wrapper stay-page">
    <div class="stay-page__container">
      <PageTitle accent="泊" title="まる" subtitle="STAY" />
      <main class="stay-content">
        <section class="stay-intro">
          <p class="stay-intro__text">
            宿泊プラン公開準備中<br />
            もうしばらくお待ちください。
          </p>
        </section>
        <section class="stay-booking">
          <article class="stay-booking__item stay-booking__item--jalan">
            <figure class="stay-booking__logo">
              <picture class="stay-booking__logo-picture">
                <!-- デスクトップ（1024px以上）→ 最高解像度版 -->
                <source
                  media="(min-width: 1024px)"
                  srcset={Jaran.srcSet.toString()}
                />
                <!-- タブレット（744px以上）→ 中解像度版 -->
                <source
                  media="(min-width: 744px)"
                  srcset={Jaran.srcSet.toString()}
                />
                <!-- スマホ（744px未満）→ 最小解像度版 -->
                <img
                  src={Jaran.src}
                  alt="じゃらんロゴ"
                  class="stay-booking__logo-img"
                />
              </picture>
            </figure>
            <p class="stay-booking__description">
              じゃらんから<br />
              ご予約を承ります
            </p>
            <a
              href="https://www.jalan.net/yad391416/plan/?screenId=UWW3001&yadNo=391416&smlCd=150602&distCd=01&ccnt=yads2"
              target="_blank"
              rel="noopener noreferrer"
              class="stay-booking__link"
            >
              <span class="stay-booking__button">
                <span class="stay-booking__button-text">じゃらんで予約</span>
                <svg
                  class="stay-booking__button-icon"
                  xmlns="http://www.w3.org/2000/svg"
                  width="51"
                  height="51"
                  viewBox="0 0 51 51"
                  fill="none"
                >
                  <circle cx="25.5703" cy="25.9756" r="25" fill="white"
                  ></circle>
                  <path
                    d="M21.2257 17.2765L20.3049 18.6192L19.472 19.985L20.8586 20.8876L22.2763 21.8201L23.6753 22.7752L25.093 23.7078L26.5511 24.5751L28.001 25.5631L26.4716 26.4314L25.0931 27.4435L23.6586 28.356L22.2267 29.2842L20.8118 30.2352L19.3177 31.1391L20.3064 32.4862L21.1378 33.9321L22.5293 32.9016L23.9539 31.9877L25.4402 31.1689L26.7835 30.1212L28.2529 29.2797L29.6705 28.3444L31.0698 27.3962L32.517 26.5007L33.9262 25.554L32.4723 24.6923L31.1294 23.6692L29.6553 22.8401L28.3181 21.8127L26.8311 21.0021L25.455 20.0299L24.0675 19.0663L22.6323 18.182L21.2257 17.2765Z"
                    fill="#FF5800"></path>
                </svg>
              </span>
            </a>
          </article>
          <article class="stay-booking__item stay-booking__item--rakuten">
            <figure class="stay-booking__logo">
              <picture class="stay-booking__logo-picture">
                <!-- デスクトップ（1024px以上）→ 最高解像度版 -->
                <source
                  media="(min-width: 1024px)"
                  srcset={Rakuten.srcSet.toString()}
                />
                <!-- タブレット（744px以上）→ 中解像度版 -->
                <source
                  media="(min-width: 744px)"
                  srcset={Rakuten.srcSet.toString()}
                />
                <!-- スマホ（744px未満）→ 最小解像度版 -->
                <img
                  src={Rakuten.src}
                  alt="楽天トラベルロゴ"
                  class="stay-booking__logo-img"
                />
              </picture>
            </figure>
            <p class="stay-booking__description">
              楽天から<br />
              ご予約を承ります
            </p>
            <a
              href="https://hotel.travel.rakuten.co.jp/hotelinfo/plan/137810?f_teikei=&f_heya_su=1&f_otona_su=1&f_s1=0&f_s2=0&f_y1=0&f_y2=0&f_y3=0&f_y4=0&f_kin=&f_kin2=&f_squeezes=&f_tscm_flg=&f_tel=&f_flg=PLAN&f_static=1"
              target="_blank"
              rel="noopener noreferrer"
              class="stay-booking__link"
            >
              <span class="stay-booking__button">
                <span class="stay-booking__button-text">楽天トラベルで予約</span
                >
                <svg
                  class="stay-booking__button-icon"
                  xmlns="http://www.w3.org/2000/svg"
                  width="51"
                  height="51"
                  viewBox="0 0 51 51"
                  fill="none"
                >
                  <circle cx="25.5703" cy="25.9756" r="25" fill="white"
                  ></circle>
                  <path
                    d="M21.2257 17.2765L20.3049 18.6192L19.472 19.985L20.8586 20.8876L22.2763 21.8201L23.6753 22.7752L25.093 23.7078L26.5511 24.5751L28.001 25.5631L26.4716 26.4314L25.0931 27.4435L23.6586 28.356L22.2267 29.2842L20.8118 30.2352L19.3177 31.1391L20.3064 32.4862L21.1378 33.9321L22.5293 32.9016L23.9539 31.9877L25.4402 31.1689L26.7835 30.1212L28.2529 29.2797L29.6705 28.3444L31.0698 27.3962L32.517 26.5007L33.9262 25.554L32.4723 24.6923L31.1294 23.6692L29.6553 22.8401L28.3181 21.8127L26.8311 21.0021L25.455 20.0299L24.0675 19.0663L22.6323 18.182L21.2257 17.2765Z"
                    fill="#00BA00"></path>
                </svg>
              </span>
            </a>
          </article>
        </section>
        <aside class="stay-notice">
          <h2 class="stay-notice__title">ご注意事項</h2>
          <ul class="stay-notice__list">
            <li class="stay-notice__item">
              ※ ご宿泊の予約は各予約サイトから行っていただきます。
            </li>
            <li class="stay-notice__item">
              ※ kokko-fes公式サイトでは宿泊予約の受付は行っておりません。
            </li>
            <li class="stay-notice__item">
              ※ リンク先は外部サイトとなります。
            </li>
          </ul>
        </aside>
      </main>
    </div>

    <Breadcrumb currentPageTitle="泊まる" />
    <PageBottomWave />
  </section>

  <style lang="scss">
    @import "../styles/variables";
    @import "../styles/functions";
    @import "../styles/mixins";

    .stay-page {
      padding-top: spx(296);
      position: relative;
      min-height: 90vh;
      padding-bottom: spx(99);
      @include tablet-up {
        padding-top: ppx(253 * 1.2);
        padding-bottom: ppx(228 * 1.2);
      }
      @include desktop-up {
        padding-top: ppx(253);
        padding-bottom: ppx(228);
      }

      &__container {
        padding-bottom: spx(100);
        @include tablet-up {
          padding-bottom: ppx(130 * 1.2);
        }
        @include desktop-up {
          padding-bottom: ppx(130);
        }
      }
    }

    .stay-content {
      @include tablet-up {
      }
      @include desktop-up {
      }
    }

    .stay-intro {
      margin-top: spx(60);
      @include tablet-up {
        margin-top: ppx(52 * 1.2);
      }
      @include desktop-up {
        margin-top: ppx(52);
      }

      &__text {
        color: var(--base_5, #102a4d);
        text-align: center;
        font-family: "Zen Kaku Gothic Antique";
        font-size: spx(27);
        font-style: normal;
        font-weight: 700;
        line-height: 160%;
        @include tablet-up {
          font-size: ppx(33 * 1.2);
        }
        @include desktop-up {
          font-size: ppx(33);
        }
      }

      &__break {
        &--sp {
          display: block;
          @include tablet-up {
            display: none;
          }
          @include desktop-up {
          }
        }
      }
    }

    .stay-booking {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: spx(50);
      margin-top: spx(60);
      @include tablet-up {
        flex-direction: row;
        justify-content: center;
        align-items: flex-start;
        gap: ppx(50 * 1.2);
        margin-top: ppx(90 * 1.2);
      }
      @include desktop-up {
        gap: ppx(50);
        margin-top: ppx(90);
      }

      &__item {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: spx(530);
        border-radius: spx(30);
        background: var(--white, #fff);

        @include tablet-up {
          width: ppx(650 * 1.2);
          border-radius: ppx(30 * 1.2);
        }
        @include desktop-up {
          width: ppx(650);
          border-radius: ppx(30);
        }

        &--jalan {
          padding-top: spx(70);
          padding-bottom: spx(70);
          @include tablet-up {
            padding-top: ppx(90 * 1.2);
            padding-bottom: ppx(90 * 1.2);
          }
          @include desktop-up {
            padding-top: ppx(90);
            padding-bottom: ppx(90);
          }
          .stay-booking__description {
            margin: spx(26) 0 spx(35);
            @include tablet-up {
              margin: ppx(26 * 1.2) 0 ppx(35 * 1.2);
            }
            @include desktop-up {
              margin: ppx(26) 0 ppx(35);
            }
          }
          .stay-booking__button {
            background: #ff5800;
            padding-left: spx(73);
            @include tablet-up {
              padding-left: ppx(79 * 1.2);
            }
            @include desktop-up {
              padding-left: ppx(79);
            }
          }
          img {
            display: block;
            width: spx(342);
            @include tablet-up {
              width: ppx(342 * 1.2);
            }
            @include desktop-up {
              width: ppx(342);
            }
          }
        }

        &--rakuten {
          padding-top: spx(59);
          padding-bottom: spx(70);
          @include tablet-up {
            padding-top: ppx(79 * 1.2);
            padding-bottom: ppx(90 * 1.2);
          }
          @include desktop-up {
            padding-top: ppx(79);
            padding-bottom: ppx(90);
          }
          .stay-booking__description {
            margin: spx(19) 0 spx(35);
            @include tablet-up {
              margin: ppx(19 * 1.2) 0 ppx(35 * 1.2);
            }
            @include desktop-up {
              margin: ppx(19) 0 ppx(35);
            }
          }
          .stay-booking__button {
            background: #00ba00;
            padding-left: spx(36);
            @include tablet-up {
              padding-left: ppx(36 * 1.2);
            }
            @include desktop-up {
              padding-left: ppx(36);
            }
          }
          img {
            display: block;
            width: spx(257);
            @include tablet-up {
              width: ppx(257 * 1.2);
            }
            @include desktop-up {
              width: ppx(257);
            }
          }
        }
      }

      &__logo {
        @include tablet-up {
        }
        @include desktop-up {
        }

        &-picture {
          @include tablet-up {
          }
          @include desktop-up {
          }
        }

        &-img {
          @include tablet-up {
          }
          @include desktop-up {
          }
        }
      }

      &__description {
        color: var(--base_5, #102a4d);
        text-align: center;
        font-family: "Zen Kaku Gothic Antique";
        font-size: spx(28);
        font-style: normal;
        font-weight: 700;
        line-height: 160%;
        @include tablet-up {
          font-size: ppx(28 * 1.2);
        }
        @include desktop-up {
          font-size: ppx(28);
        }
      }

      &__link {
        @include tablet-up {
        }
        @include desktop-up {
        }

        @include hover {
          &:hover {
            .stay-booking__button {
              background: var(--logo_color_3, #c99e2d);
            }

            .stay-booking__button-icon path {
              fill: var(--logo_color_3, #c99e2d);
            }
          }
        }
      }

      &__button {
        display: flex;
        width: spx(370);
        height: spx(80);
        align-items: center;
        gap: spx(10);
        flex-shrink: 0;
        border-radius: spx(70);
        position: relative;
        transition: background 0.3s ease;
        @include tablet-up {
          width: ppx(420 * 1.2);
          height: ppx(90 * 1.2);
          gap: ppx(10 * 1.2);
          border-radius: ppx(80 * 1.2);
        }
        @include desktop-up {
          width: ppx(420);
          height: ppx(90);
          gap: ppx(10);
          border-radius: ppx(80);
        }

        &-text {
          color: var(--white, #fff);
          text-align: center;
          font-family: "Zen Kaku Gothic Antique";
          font-size: spx(28);
          font-style: normal;
          font-weight: 700;
          line-height: normal;
          @include tablet-up {
            font-size: ppx(33 * 1.2);
          }
          @include desktop-up {
            font-size: ppx(33);
          }
        }

        &-icon {
          display: block;
          width: spx(50);
          height: spx(50);
          position: absolute;
          top: 50%;
          transform: translateY(-50%);
          right: spx(13);
          @include tablet-up {
            width: ppx(50 * 1.2);
            height: ppx(50 * 1.2);
            right: ppx(16 * 1.2);
          }
          @include desktop-up {
            width: ppx(50);
            height: ppx(50);
            right: ppx(16);
          }

          path {
            transition: fill 0.3s ease;
          }
        }
      }
    }

    .stay-notice {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-top: spx(64);
      gap: spx(10);
      @include tablet-up {
        margin-top: ppx(90 * 1.2);
        flex-direction: row;
        justify-content: center;
        align-items: flex-start;
        gap: ppx(70 * 1.2);
      }
      @include desktop-up {
        margin-top: ppx(90);
        gap: ppx(70);
      }

      &__title {
        color: var(--logo_color_3, #c99e2d);
        text-align: center;
        font-family: "Zen Kaku Gothic Antique";
        font-size: spx(33);
        font-style: normal;
        font-weight: 700;
        line-height: 180%;
        @include tablet-up {
          font-size: ppx(33 * 1.2);
        }
        @include desktop-up {
          font-size: ppx(33);
        }
      }

      &__list {
        @include tablet-up {
        }
        @include desktop-up {
        }
      }

      &__item {
        color: var(--base_5, #102a4d);
        font-family: "Zen Kaku Gothic Antique";
        font-size: spx(23);
        font-style: normal;
        font-weight: 700;
        line-height: 180%;
        letter-spacing: spx(-0.69);
        @include tablet-up {
          font-size: ppx(24 * 1.2);
          letter-spacing: 0;
        }
        @include desktop-up {
          font-size: ppx(24);
        }
      }
    }
  </style>
</PageLayout>
