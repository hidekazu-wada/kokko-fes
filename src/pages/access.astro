---
// コンポーネント
import PageLayout from "../layouts/PageLayout.astro";
import PageBottomWave from "../components/common/PageBottomWave.astro";
import Breadcrumb from "../components/common/Breadcrumb.astro";

// 画像
import { getImage } from "astro:assets";
import ByBusTrain from "../images/access/by_bus-train.png";
import ByCar from "../images/access/by_car.png";
import Shinjyuku from "../images/access/from-shinjyuku.svg";
import FujisanSt from "../images/access/from-fujisan-st.svg";
import KawaguchikoSt from "../images/access/from-kawaguchiko-st.svg";
import MenuClose from "../images/menu/menu-close.svg";

// フォーマット
const BusTrain = await getImage({
  src: ByBusTrain,
  format: "webp",
  widths: [410, 470],
});
const Car = await getImage({
  src: ByCar,
  format: "webp",
  widths: [349, 410],
});
---

<PageLayout title="アクセス｜コッコ祭り 2025｜KOKKO Festival">
  <section class="page-wrapper access-page">
    <div class="access-page__container">
      <header class="access-page__header">
        <h1 class="access-page__title">
          <span class="access-page__title-accent">ア</span>
          クセス
        </h1>
        <p class="access-page__subtitle">− ACCESS −</p>
      </header>
    </div>
    <section class="venue">
      <article class="venue__info">
        <header class="venue__header">
          <h2 class="venue__title"><span>会　場</span></h2>
        </header>
        <address class="venue__address">
          <span class="venue__postal">〒401-0332</span>
          <span class="venue__prefecture">山梨県南都留郡 富士河口湖町</span>
          <span class="venue__name">西湖・HAMAYOUリゾート</span>
        </address>
        <figure class="venue__map">
          <iframe
            class="venue__iframe"
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3248.006808595734!2d138.68091747644192!3d35.50410987264499!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x601be1abf278b1dd%3A0x8bbcffa1146e4d31!2sHamayou%20Resort!5e0!3m2!1sja!2sjp!4v1757043217318!5m2!1sja!2sjp"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
        </figure>
        <a
          class="venue__map-link"
          target="_blank"
          href="https://www.google.com/maps/dir/35.5048992,138.6849608/%E3%80%92401-0332+%E5%B1%B1%E6%A2%A8%E7%9C%8C%E5%8D%97%E9%83%BD%E7%95%99%E9%83%A1%E5%AF%8C%E5%A3%AB%E6%B2%B3%E5%8F%A3%E6%B9%96%E7%94%BA%E8%A5%BF%E6%B9%96%EF%BC%91%EF%BC%90%EF%BC%92%EF%BC%93/@35.5043136,138.6817906,907m/data=!3m2!1e3!4b1!4m9!4m8!1m1!4e1!1m5!1m1!1s0x601be1abf0768b47:0x1ce8817cc05e5f40!2m2!1d138.6834924!2d35.5041099?entry=ttu&g_ep=EgoyMDI1MDkwMi4wIKXMDSoASAFQAw%3D%3D"
        >
          <div class="venue__link-content">
            <span class="venue__link-text">Google MAP</span>
            <svg
              class="venue__link-icon"
              xmlns="http://www.w3.org/2000/svg"
              width="47"
              height="47"
              viewBox="0 0 47 47"
              fill="none"
            >
              <circle cx="23.3815" cy="23.5934" r="22.6667" fill="white"
              ></circle>
              <path
                d="M19.4418 15.704L18.6069 16.9215L17.8517 18.1597L19.109 18.9781L20.3943 19.8236L21.6628 20.6896L22.9481 21.5351L24.2701 22.3215L25.5847 23.2172L24.1981 24.0045L22.9482 24.9221L21.6476 25.7495L20.3494 26.5911L19.0665 27.4533L17.7118 28.2728L18.6083 29.4942L19.3621 30.8052L20.6237 29.8708L21.9154 29.0422L23.2629 28.2999L24.4808 27.3499L25.8131 26.5869L27.0984 25.7389L28.3671 24.8793L29.6792 24.0673L30.9569 23.209L29.6387 22.4277L28.4211 21.5001L27.0846 20.7484L25.8722 19.8169L24.524 19.0819L23.2763 18.2005L22.0183 17.3268L20.7171 16.525L19.4418 15.704Z"
                fill="#816259"></path>
            </svg>
          </div>
        </a>
      </article>
    </section>

    <section class="transportation">
      <svg
        class="transportation__wave"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 2559 170"
        fill="none"
      >
        <path
          d="M2559 0H0.00146484V70C0.00146484 70 315.501 170 639.751 170C964.001 170 1481.5 20 1812 20C2142.5 20 2559 120 2559 120V0Z"
          fill="#FFFCF2"></path>
      </svg>
      <article class="transportation__method transportation__method--bus-train">
        <header class="transportation__header">
          <picture class="transportation__image">
            <!-- デスクトップ（1024px以上）→ 最高解像度版 -->
            <source
              media="(min-width: 1024px)"
              srcset={BusTrain.srcSet.toString()}
            />
            <!-- タブレット（744px以上）→ 中解像度版 -->
            <source
              media="(min-width: 744px)"
              srcset={BusTrain.srcSet.toString()}
            />
            <!-- スマホ（744px未満）→ 最小解像度版 -->
            <img
              class="transportation__img"
              src={BusTrain.src}
              alt="バス・電車でのアクセス"
            />
          </picture>
          <h3 class="transportation__title">バス・電車でお越しの方</h3>
        </header>

        <main class="transportation__routes">
          <section class="transportation__route">
            <article class="transportation__route-info">
              <h4 class="transportation__from">東京 (新宿) から</h4>
              <time class="transportation__duration">
                <span class="transportation__duration-prefix">約</span>
                <span class="transportation__duration-number">140</span>
                <span class="transportation__duration-suffix">分</span>
              </time>
              <button
                class="transportation__detail-link"
                type="button"
                data-modal="modal-shinjuku"
                aria-label="新宿からの詳細な路線図を表示"
              >
                <span class="transportation__detail-text">詳 細 ＞</span>
              </button>
            </article>
          </section>

          <section class="transportation__route">
            <article class="transportation__route-info">
              <h4 class="transportation__from">富士山駅 から</h4>
              <time class="transportation__duration">
                <span class="transportation__duration-prefix">約</span>
                <span class="transportation__duration-number">30</span>
                <span class="transportation__duration-suffix">分</span>
              </time>
              <button
                class="transportation__detail-link"
                type="button"
                data-modal="modal-fujisan"
                aria-label="富士山駅からの詳細な路線図を表示"
              >
                <span class="transportation__detail-text">詳 細 ＞</span>
              </button>
            </article>
          </section>

          <section class="transportation__route">
            <article class="transportation__route-info">
              <h4 class="transportation__from">河口湖駅から</h4>
              <time class="transportation__duration">
                <span class="transportation__duration-prefix">約</span>
                <span class="transportation__duration-number">20</span>
                <span class="transportation__duration-suffix">分</span>
              </time>
              <button
                class="transportation__detail-link"
                type="button"
                data-modal="modal-kawaguchiko"
                aria-label="河口湖駅からの詳細な路線図を表示"
              >
                <span class="transportation__detail-text">詳 細 ＞</span>
              </button>
            </article>
          </section>
        </main>
      </article>

      <span class="transportation__divider"></span>

      <article class="transportation__method transportation__method--car">
        <header class="transportation__header">
          <picture class="transportation__image">
            <!-- デスクトップ（1024px以上）→ 最高解像度版 -->
            <source
              media="(min-width: 1024px)"
              srcset={Car.srcSet.toString()}
            />
            <!-- タブレット（744px以上）→ 中解像度版 -->
            <source media="(min-width: 744px)" srcset={Car.srcSet.toString()} />
            <!-- スマホ（744px未満）→ 最小解像度版 -->
            <img
              class="transportation__img"
              src={Car.src}
              alt="お車でのアクセス"
            />
          </picture>
          <h3 class="transportation__title">お車でお越しの方</h3>
        </header>

        <main class="transportation__routes">
          <section class="transportation__route">
            <article class="transportation__route-info">
              <h4 class="transportation__from">東京 (新宿) から</h4>
              <time class="transportation__duration">
                <span class="transportation__duration-prefix">約</span>
                <span class="transportation__duration-number">120</span>
                <span class="transportation__duration-suffix">分</span>
              </time>
              <a
                class="transportation__detail-link"
                target="_blank"
                href="https://www.google.com/maps/dir/35.5048992,138.6849608/%E3%80%92401-0332+%E5%B1%B1%E6%A2%A8%E7%9C%8C%E5%8D%97%E9%83%BD%E7%95%99%E9%83%A1%E5%AF%8C%E5%A3%AB%E6%B2%B3%E5%8F%A3%E6%B9%96%E7%94%BA%E8%A5%BF%E6%B9%96%EF%BC%91%EF%BC%90%EF%BC%92%EF%BC%93/@35.5043136,138.6817906,907m/data=!3m2!1e3!4b1!4m9!4m8!1m1!4e1!1m5!1m1!1s0x601be1abf0768b47:0x1ce8817cc05e5f40!2m2!1d138.6834924!2d35.5041099?entry=ttu&g_ep=EgoyMDI1MDkwMi4wIKXMDSoASAFQAw%3D%3D"
              >
                <span class="transportation__detail-text">詳 細 ＞</span>
              </a>
            </article>
          </section>

          <section class="transportation__route">
            <article class="transportation__route-info">
              <h4 class="transportation__from">神奈川 (横浜) から</h4>
              <time class="transportation__duration">
                <span class="transportation__duration-prefix">約</span>
                <span class="transportation__duration-number">120</span>
                <span class="transportation__duration-suffix">分</span>
              </time>
              <a
                class="transportation__detail-link"
                target="_blank"
                href="https://www.google.com/maps/dir/35.5048992,138.6849608/%E3%80%92401-0332+%E5%B1%B1%E6%A2%A8%E7%9C%8C%E5%8D%97%E9%83%BD%E7%95%99%E9%83%A1%E5%AF%8C%E5%A3%AB%E6%B2%B3%E5%8F%A3%E6%B9%96%E7%94%BA%E8%A5%BF%E6%B9%96%EF%BC%91%EF%BC%90%EF%BC%92%EF%BC%93/@35.5043136,138.6817906,907m/data=!3m2!1e3!4b1!4m9!4m8!1m1!4e1!1m5!1m1!1s0x601be1abf0768b47:0x1ce8817cc05e5f40!2m2!1d138.6834924!2d35.5041099?entry=ttu&g_ep=EgoyMDI1MDkwMi4wIKXMDSoASAFQAw%3D%3D"
              >
                <span class="transportation__detail-text">詳 細 ＞</span>
              </a>
            </article>
          </section>

          <section class="transportation__route">
            <article class="transportation__route-info">
              <h4 class="transportation__from">河口湖駅から</h4>
              <time class="transportation__duration">
                <span class="transportation__duration-prefix">約</span>
                <span class="transportation__duration-number">17</span>
                <span class="transportation__duration-suffix">分</span>
              </time>
              <a
                class="transportation__detail-link"
                target="_blank"
                href="https://www.google.com/maps/dir/35.5048992,138.6849608/%E3%80%92401-0332+%E5%B1%B1%E6%A2%A8%E7%9C%8C%E5%8D%97%E9%83%BD%E7%95%99%E9%83%A1%E5%AF%8C%E5%A3%AB%E6%B2%B3%E5%8F%A3%E6%B9%96%E7%94%BA%E8%A5%BF%E6%B9%96%EF%BC%91%EF%BC%90%EF%BC%92%EF%BC%93/@35.5043136,138.6817906,907m/data=!3m2!1e3!4b1!4m9!4m8!1m1!4e1!1m5!1m1!1s0x601be1abf0768b47:0x1ce8817cc05e5f40!2m2!1d138.6834924!2d35.5041099?entry=ttu&g_ep=EgoyMDI1MDkwMi4wIKXMDSoASAFQAw%3D%3D"
              >
                <span class="transportation__detail-text">詳 細 ＞</span>
              </a>
            </article>
          </section>
        </main>
      </article>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 2559 170"
        fill="none"
        class="transportation__bottom-wave"
      >
        <path
          d="M2559 170H0V100C0 100 315.5 0 639.75 0C964 0 1481.5 150 1812 150C2142.5 150 2559 50 2559 50V170Z"
          fill="#FFFCF2"></path>
      </svg>
    </section>
    <section class="parking">
      <article class="parking__info">
        <header class="parking__header">
          <h2 class="parking__title"><span>駐車場</span></h2>
        </header>
        <div class="parking__pdf"></div>
      </article>
    </section>
    <Breadcrumb currentPageTitle="アクセス" />
    <PageBottomWave />
  </section>

  <!-- モーダル -->
  <aside
    class="modal"
    id="modal-fujisan"
    role="dialog"
    aria-labelledby="modal-fujisan-title"
    aria-modal="true"
  >
    <div class="modal__overlay">
      <div class="modal__content">
        <header class="modal__header">
          <button
            class="modal__close-button"
            type="button"
            aria-label="モーダルを閉じる"
          >
            <img src={MenuClose.src} alt="閉じる" />
          </button>
        </header>
        <main class="modal__body">
          <img
            class="modal__image"
            src={FujisanSt.src}
            alt="富士山駅からの路線図"
          />
        </main>
      </div>
    </div>
  </aside>

  <aside
    class="modal"
    id="modal-kawaguchiko"
    role="dialog"
    aria-labelledby="modal-kawaguchiko-title"
    aria-modal="true"
  >
    <div class="modal__overlay">
      <div class="modal__content">
        <header class="modal__header">
          <button
            class="modal__close-button"
            type="button"
            aria-label="モーダルを閉じる"
            ><img src={MenuClose.src} alt="閉じる" /></button
          >
        </header>
        <main class="modal__body">
          <img
            class="modal__image"
            src={KawaguchikoSt.src}
            alt="河口湖駅からの路線図"
          />
        </main>
      </div>
    </div>
  </aside>

  <aside
    class="modal"
    id="modal-shinjuku"
    role="dialog"
    aria-labelledby="modal-shinjuku-title"
    aria-modal="true"
  >
    <div class="modal__overlay">
      <div class="modal__content">
        <header class="modal__header">
          <button
            class="modal__close-button"
            type="button"
            aria-label="モーダルを閉じる"
            ><img src={MenuClose.src} alt="閉じる" /></button
          >
        </header>
        <main class="modal__body">
          <img
            class="modal__image"
            src={Shinjyuku.src}
            alt="新宿からの路線図"
          />
        </main>
      </div>
    </div>
  </aside>

  <style lang="scss">
