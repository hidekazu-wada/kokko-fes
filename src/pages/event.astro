---
// コンポーネント
import PageLayout from "../layouts/PageLayout.astro";
import PageBottomWave from "../components/common/PageBottomWave.astro";
import Breadcrumb from "../components/common/Breadcrumb.astro";

// 画像
import { getImage } from "astro:assets";
import TitleTreeImage from "..//images/event/tree.png";

const Tree = await getImage({
  src: TitleTreeImage,
  format: "webp",
  widths: [140, 155, 170],
});
---

<PageLayout title="イベント情報｜コッコ祭り 2025｜KOKKO Festival">
  <section class="page-wrapper event-page">
    <div class="event-page__container">
      <header class="event-page__header">
        <h1 class="event-page__title">
          <span class="event-page__title-accent">イ</span>
          ベント情報
        </h1>
        <p class="event-page__subtitle">− EVENT −</p>
      </header>
      <div class="">
        <div>
          <div class="">
            <picture class="クラス名 モディファイア名">
              <!-- デスクトップ（1024px以上）→ 最高解像度版 -->
              <source
                media="(min-width: 1024px)"
                srcset={Tree.srcSet.toString()}
              />
              <!-- タブレット（744px以上）→ 中解像度版 -->
              <source
                media="(min-width: 744px)"
                srcset={Tree.srcSet.toString()}
              />
              <!-- スマホ（744px未満）→ 最小解像度版 -->
              <img
                src={Tree.src}
                alt="画像の内容を説明するテキスト"
                class="追加のクラス名（必要に応じて）"
              />
            </picture>
          </div>
          <div class="">開催概要</div>
          <div class="">
            <picture class="クラス名 モディファイア名">
              <!-- デスクトップ（1024px以上）→ 最高解像度版 -->
