---
import overviewImage from "../../images/top/overview-img.svg";
import overviewBottomMobile from "../../images/top/overview-bottom-mobile.svg";
import overviewBottomTabletUp from "../../images/top/overview-bottom-tablet-up.svg";
---

<section class="overview">
  <svg
    class="overview__wave"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 2559 170"
    fill="none"
  >
    <path
      d="M2559 0H0.00146484V70C0.00146484 70 315.501 170 639.751 170C964.001 170 1481.5 20 1812 20C2142.5 20 2559 120 2559 120V0Z"
      fill="#FFFCF2"></path>
  </svg>

  <img src={overviewImage.src} alt="開催概要" class="overview__image" />

  <article class="overview__content">
    <header class="overview__header">
      <h2 class="overview__title">
        <span>開催概要</span>
      </h2>
    </header>
    <dl class="overview__details">
      <div class="overview__item">
        <dt class="overview__term">開催日時</dt>
        <dd class="overview__description">
          <time class="overview__date" datetime="2025-12">2025年12月</time>
          <div class="overview__schedule">
            <time
              class="overview__time"
              datetime="2025-12-07T12:00/2025-12-07T23:00"
              >7日（土）12:00〜23:00、</time
            >
            <time
              class="overview__time"
              datetime="2025-12-08T09:00/2025-12-08T15:00"
              >8日（日）9:00〜15:00</time
            >
          </div>
        </dd>
      </div>
      <div class="overview__item">
        <dt class="overview__term">開催場所</dt>
        <dd class="overview__description">
          <address class="overview__address">
            <span class="overview__postal-code">〒401-0332</span>
            <div class="overview__location">
              <span class="overview__prefecture"
                >山梨県南都留郡 富士河口湖町西湖・</span
              >
              <span class="overview__venue">HAMAYOUリゾート</span>
            </div>
          </address>
        </dd>
      </div>
    </dl>
  </article>

  <picture class="overview__bottom-image-wrapper">
    <source media="(min-width: 1024px)" srcset={overviewBottomTabletUp.src} />
    <source media="(min-width: 744px)" srcset={overviewBottomTabletUp.src} />
    <img
      src={overviewBottomMobile.src}
      alt="開催概要"
      class="overview__bottom-image"
    />
  </picture>
</section>

<style lang="scss">
  /* 必要なmixin/functionをインポート */
  @import "../../styles/variables";
  @import "../../styles/functions";
  @import "../../styles/mixins";

  .overview {
    background: var(--base_5, #102a4d);
    position: relative;
    padding-top: spx(74);
    padding-bottom: spx(345);
    @include tablet-up {
      padding-top: ppx(208) * 1.2;
      padding-bottom: ppx(852) * 1.2;
    }
    @include desktop-up {
      padding-top: ppx(208);
      padding-bottom: ppx(852);
    }

    &__wave {
      position: absolute;
      top: -1px;
      left: 0;
      display: block;
      width: 100%;
      @include tablet-up {
      }
      @include desktop-up {
      }
    }

    &__image {
      display: block;
      width: spx(667);
      margin-inline: auto;
      @include tablet-up {
        width: 92vw;
      }
      @include desktop-up {
        width: ppx(2370);
      }
    }

    &__header {
      @include tablet-up {
      }
      @include desktop-up {
      }
    }

    &__title {
      width: spx(180);
      height: spx(74);
      border-radius: spx(50);
      background-color: white;
      display: grid;
      place-items: center;
      margin-inline: auto;
      margin-top: spx(40);
      @include tablet-up {
        width: ppx(220) * 1.2;
        height: ppx(92) * 1.2;
        border-radius: ppx(50) * 1.2;
        margin-top: 0;
      }
      @include desktop-up {
        width: ppx(220);
        height: ppx(92);
        border-radius: ppx(50);
      }
      span {
        color: var(--base_5, #102a4d);
        font-size: spx(30);
        font-weight: 700;
        line-height: 180%;
        @include tablet-up {
          font-size: ppx(40) * 1.2;
        }
        @include desktop-up {
          font-size: ppx(40);
        }
      }
    }

    &__details {
      color: white;
      font-size: spx(30);
      font-weight: 700;
      line-height: 180%;
      display: flex;
      flex-flow: column;
      gap: spx(30);
      margin-top: spx(40);
      @include tablet-up {
        font-size: ppx(30) * 1.2;
        gap: ppx(10) * 1.2;
        margin-top: ppx(60) * 1.2;
      }
      @include desktop-up {
        font-size: ppx(30);
        gap: ppx(10);
        margin-top: ppx(40);
      }
    }

    &__item {
      display: flex;
      flex-flow: column;
      position: relative;
      width: spx(560);
      margin-inline: auto;
      padding-bottom: spx(30);
      @include tablet-up {
        flex-flow: row;
        gap: ppx(60) * 1.2;
        width: ppx(981) * 1.2;
        padding-bottom: ppx(10) * 1.2;
      }
      @include desktop-up {
        gap: ppx(60);
        width: ppx(981);
        padding-bottom: ppx(10);
      }
      &::after {
        content: "";
        position: absolute;
        bottom: 0;
        display: block;
        background:
          linear-gradient(
            to right,
            white,
            white 25%,
            rgba(0, 0, 0, 0) 25%,
            rgba(0, 0, 0, 0) 100%
          ),
          0% 0%;
        background-size: 4px 1px;
        width: 100%;
        height: 1px;
        margin-left: auto;
        margin-right: auto;
      }
    }

    &__term {
      text-align: center;
      @include tablet-up {
        text-align: left;
      }
      @include desktop-up {
      }
    }

    &__description {
      display: flex;
      justify-content: center;
      @include tablet-up {
        justify-content: flex-start;
      }
      @include desktop-up {
      }
    }

    &__date {
      @include tablet-up {
      }
      @include desktop-up {
      }
    }

    &__schedule {
      display: flex;
      flex-flow: column;
      @include tablet-up {
        flex-flow: row;
      }
      @include desktop-up {
      }
    }

    &__time {
      @include tablet-up {
      }
      @include desktop-up {
      }
    }

    &__address {
      text-align: center;
      @include tablet-up {
        text-align: left;
      }
      @include desktop-up {
      }
    }

    &__postal-code {
      @include tablet-up {
      }
      @include desktop-up {
      }
    }

    &__location {
      @include tablet-up {
      }
      @include desktop-up {
      }
    }

    &__prefecture {
      @include tablet-up {
      }
      @include desktop-up {
      }
    }

    &__venue {
      @include tablet-up {
      }
      @include desktop-up {
      }
    }
    &__bottom-image-wrapper {
      @include tablet-up {
      }
      @include desktop-up {
      }
    }
    &__bottom-image {
      position: absolute;
      bottom: -1px;
      left: 0;
      display: block;
      width: 100%;
      @include tablet-up {
      }
      @include desktop-up {
      }
    }
  }
</style>
